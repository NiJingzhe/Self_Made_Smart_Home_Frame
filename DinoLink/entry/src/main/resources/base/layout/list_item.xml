<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="200vp"
    ohos:width="match_parent"
    ohos:margin="10vp"
    ohos:orientation="vertical"
    ohos:alignment="start"
    ohos:padding="10vp"
    ohos:background_element="$graphic:background_ability_device_page_device_item">

    <Image
        ohos:id="$+id:img_button"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:clip_alignment="left"
        ohos:layout_alignment="vertical_center"
        ohos:text_color="#00FFFFFF"
        ohos:weight="0.5"/>

    <Text
        ohos:id="$+id:device_name"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="start|vertical_center"
        ohos:text="设备名称"
        ohos:weight="0.25"
        ohos:text_size="24fp"
        ohos:text_color="#FFFFFFFF"/>

</DirectionalLayout>