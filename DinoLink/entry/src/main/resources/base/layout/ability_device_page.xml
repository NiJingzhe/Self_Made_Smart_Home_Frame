<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="start"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_ability_device_page">

    <DirectionalLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="$graphic:background_ability_device_page_title_bar">

        <Text
            ohos:id="$+id:title"
            ohos:weight="0.75"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="$string:device_page_title"
            ohos:start_margin="15vp"
            ohos:text_alignment="start|vertical_center"
            ohos:text_color="#FFFFFF"
            ohos:text_size="25fp"
            ohos:text_selectable="false"
            ohos:auto_font_size_min_size="22"
            ohos:auto_font_size_max_size="30"/>

        <Button
            ohos:id="$+id:setting_button"
            ohos:weight="0.25"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_ability_device_page_title_bar"
            ohos:text="$string:setting_button_text"
            ohos:text_color="#FFFFFF"
            ohos:text_size="16fp"
            ohos:text_selectable="false"
            ohos:auto_font_size_min_size="12"
            ohos:auto_font_size_max_size="20"
            />

    </DirectionalLayout>

    <ListContainer
        ohos:id="$+id:list_container"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="vertical"/>

</DirectionalLayout>